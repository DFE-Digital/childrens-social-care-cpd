@using Contentful.Core.Models;
@using Childrens_Social_Care_CPD.Enums;
@model ContentfulCollection<PageViewModel>;

@{var pageViewModel = @Model.FirstOrDefault();}
@{
    ViewData["Title"] = pageViewModel?.PageTitle;
}

@{
    if (pageViewModel != null)
    {
        PageTypes PageType = Enum.Parse<PageTypes>(pageViewModel.PageType.PageType, true);
       
        switch (PageType)
        {
            case PageTypes.Master:
               {await Html.RenderPartialAsync("../Templates/Master",@pageViewModel);}
                break;
            case PageTypes.Cards:
               {await Html.RenderPartialAsync("../Templates/Card",@pageViewModel);}
                break;
            case PageTypes.Programmes:
                 {await Html.RenderPartialAsync("../Templates/Programmes",@pageViewModel);}
                break;
            case PageTypes.PathwayDetails:
                 {await Html.RenderPartialAsync("../Templates/PathwayDetails",@pageViewModel);}
                break;
            default:
                break;
        }
    }
}
