@using Childrens_Social_Care_CPD.Constants
@using Childrens_Social_Care_CPD.Enums
@{
    var googleAnalyticsKey = Environment.GetEnvironmentVariable(SiteConstants.CPDGOOGLEANALYTICSTAG) ?? String.Empty;
    var googleAnalyticsUrl = string.Format("https://www.googletagmanager.com/gtag/js?id={0}", googleAnalyticsKey);
    var clarityProjectId = Environment.GetEnvironmentVariable(SiteConstants.CLARITYPROJECTID) ?? String.Empty;
    var contentfulEnvironment = Environment.GetEnvironmentVariable(SiteConstants.ENVIRONMENT) ?? String.Empty;
    var pageName = string.IsNullOrEmpty(@ViewBag.pageName) ? "HomePage" : @ViewBag.pageName;

    if (!String.IsNullOrEmpty(googleAnalyticsKey)) {
        <script async src='@googleAnalyticsUrl'></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', '@googleAnalyticsKey');
        </script>
        if (@contentfulEnvironment == AppEnvironment.test.ToString() || @contentfulEnvironment == AppEnvironment.prod.ToString())
        {
            <script type="text/javascript">
                (function(c,l,a,r,i,t,y){
                c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
                t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
                y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
                clarity("set", "PageName", '@pageName');
            })(window, document, "clarity", "script", '@clarityProjectId');
            </script>
        }
    }
}