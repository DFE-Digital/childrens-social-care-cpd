@model string

<div class="govuk-form-group govuk-!-margin-bottom-0">
    <h2 class="govuk-heading-m govuk-!-margin-bottom-2">
        <label for="searchTermInput">
            Search resources
        </label>
    </h2>

    <div class="govuk-hint">
        Enter a keyword or search term
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-input__wrapper">
                <input type="text" class="govuk-input" id="searchTermInput" name="@SearchRequestPropertyNames.Term" value="@Model">
                <button class="govuk-button govuk-!-margin-left-2" onclick="document.getElementById('sortOrder').value=2">
                    Search
                </button>
            </div>
        </div>
    </div>
</div>