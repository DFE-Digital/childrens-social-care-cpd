{
        
    ContextModel contextModel = (ContextModel)ViewBag.ContextModel;

    <section id="promo-banner" class="promo-banner govuk-!-margin-bottom-8">
        <div class="dfe-width-container">
            <div class="govuk-grid-row govuk-!-padding-bottom-0">
                    <div class="">
                    <h2 id="promo-banner-header" class="govuk-heading-l">@Model.PromoBannerHeader</h2>
