@using Childrens_Social_Care_CPD.Contentful.Models;
@using Childrens_Social_Care_CPD.GraphQL.Queries;

@model SearchResourcesByTags.SearchResult

<div>
    <h3>
        <a href="/@Model.LinkedFrom.ContentCollection.Items.First().Id">@Model.Title</a> &nbsp;
        @if (!string.IsNullOrEmpty(@Model.Label))
        {
            <strong class="govuk-tag govuk-tag--blue">@Model.Label</strong>
        }
    </h3>
    <p>@Model.SearchSummary</p>
    <ul class="govuk-list govuk-body-s" style="display:flex; gap:15px; flex-flow:row">
        <li>From: @Model.From</li>
        <li>Update: <time datetime="@Model.Sys.PublishedAt?.ToString("yyyy-MM-dd")">@Model.Sys.PublishedAt?.ToString("dd MMMM yyyy")</time></li>
        @* <li>Resource type: @Model.Label</li> *@
    </ul>
</div>